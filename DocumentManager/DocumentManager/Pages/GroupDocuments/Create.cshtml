@page "/GroupDocument/create"
@model DocumentManager.Pages.GroupDocuments.CreateModel

<div class="container-fluid">
    <div class="row flex-nowrap">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Main Content -->
        <div class="col py-3">
            <!------------------>
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="GroupDocument.Name" class="control-label"></label>
                            <input asp-for="GroupDocument.Name" class="form-control" />
                            <span asp-validation-for="GroupDocument.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GroupDocument.ExpirationYear" class="control-label"></label>
                            <input asp-for="GroupDocument.ExpirationYear"  class="form-control" />
                            <span asp-validation-for="GroupDocument.ExpirationYear" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GroupDocument.Category" class="control-label"></label>
                            <input asp-for="GroupDocument.Category" class="form-control" />
                            <span asp-validation-for="GroupDocument.Category" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="GroupDocument.Status" class="control-label">Status</label>
                            <div>
                                <label class="radio-inline">
                                    <input type="radio" asp-for="GroupDocument.Status" value="true" /> Active
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" asp-for="GroupDocument.Status" value="false" /> InActive
                                </label>
                            </div>
                            <span asp-validation-for="GroupDocument.Status" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="margin-top:30px">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a role="button" asp-page="./index" class="btn btn-danger">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>