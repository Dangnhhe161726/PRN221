@page "/users"
@model DocumentManager.Pages.User.IndexModel
@{
}

<div class="container-fluid">
	<div class="row flex-nowrap">
		<!-- Sidebar -->
		@await Html.PartialAsync("_Sidebar")

		<!-- Main Content -->
		<div class="col py-3">

			<!--Button feature-->
			<div class="row mb-5">
				<div class="col">
					<a class="btn btn-primary" asp-page="./Create">New User</a>
				</div>

			</div>
			<!------------------>

			<div class="table-responsive">
				<table class="table table-hover">
					<thead class="thead-dark">
						<tr>
							@*	<th scope="col"></th>*@
							<th scope="col">First Name</th>
							<th scope="col">Last Name</th>
							<th scope="col">Address</th>
							<th scope="col">Created At</th>
							<th scope="col">Email</th>
							<th scope="col">Phone Number</th>
							<th scope="col">Status</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var user in Model.user)
						{
							<tr>
								@*	<th scope="row">1</th>*@
								<td>@user.FristName</td>
								<td>@user.LastName</td>
								<td>@user.Address</td>
								<td>@user.CreatedAt.ToString("dd-mm-yyyy")</td>
								<td>@user.Email</td>
								<td>@user.PhoneNumber</td>
								@if (@user.Enabled)
								{
									<td style="color: green">Hoạt Động</td>
								}
								@if (!@user.Enabled)
								{
									<td style="color: red">Dừng Hoạt Động</td>
								}
								<td>
									<a class="btn btn-info" asp-page="./Details" asp-route-id="@user?.Id"><i class="fas fa-eye"></i></a>
									<a class="btn btn-save " asp-page="./Edit" asp-route-id="@user?.Id"><i class="fas fa-pen"></i></a>
									<a class="btn btn-danger" asp-page="./Delete" asp-route-id="@user?.Id"><i class="fas fa-minus-square"></i></a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>


	</div>
</div>
