@page "/document/detail"
@model DocumentManager.Pages.Documents.DetailModel

<div class="container-fluid">
	<div class="row flex-nowrap">
		<!-- Sidebar -->
		@await Html.PartialAsync("_Sidebar")

		<!-- Main Content -->

		<div class="col py-3">
			<dl class="row" style="margin-left: 30px">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Symbol)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Symbol)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Receiver)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Receiver)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Describe)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Describe)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.DateSign)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.DateSign)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.DateTo)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.DateTo)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.DateOut)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.DateOut)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Page)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Page)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Quantity)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Quantity)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Status)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Status)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.AgencyIssues)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.AgencyIssues.Name)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Category)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Category.Name)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Emergency)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Emergency.Name)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.GroupDocument)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.GroupDocument.Name)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.NameDocument)
