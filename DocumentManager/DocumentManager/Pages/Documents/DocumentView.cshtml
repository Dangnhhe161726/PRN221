@page "/document/list"
@model DocumentManager.Pages.Documents.DocumentViewModel
@{
}
@using DocumentManager.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
	.btn-custom {
		margin-right: 10px; 
		margin-bottom: 10px; /* Adjust spacing between buttons */
	}
	.custom-input {
		width: 200px;
		margin-right: 10px; /* Adjust as needed */
		margin-bottom: 10px; /* Adjust as needed */
	}

	.custom-select {
		width: 200px;
		margin-right: 10px; /* Adjust as needed */
		margin-bottom: 10px; /* Adjust as needed */
	}

	.custom-button {
		margin-left: 10px; /* Adjust as needed */
		margin-bottom: 10px; /* Adjust as needed */
	}
</style>


<div class="container-fluid">
	<div class="row flex-nowrap">
		<!-- Sidebar -->
		@await Html.PartialAsync("_Sidebar")

		<!-- Main Content -->
		<div class="col py-3">

			<!--Button feature-->
			<div class="row mb-5">
				<div class="col">
					<a class="btn btn-primary btn-custom" asp-page="./CreateDocument">New Document</a>
					<button class="btn btn-success btn-custom export-button">Export Excel</button>
					<form method="post" class="form-inline">
						<div class="form-group">
							<input type="text" id="searchname" class="form-control custom-input" name="searchname" value="@Model.search" placeholder="Search Name...">
						</div>

						<div class="form-group">
							<select class="form-control custom-select" id="CategoryId" name="CategoryId">
								<option value="">Get All</option>
								@if (Model.GetCategory != null)
								{
									@foreach (var item in Model.categories)
									{
										@if (item.Id == Model.GetCategory.Id)
										{
											<option value="@item.Id" selected>@item.Name</option>
										}
										else
										{
											<option value="@item.Id">@item.Name</option>
										}
									}
								}
								else
								{
									@foreach (var item in Model.categories)
									{
										<option value="@item.Id">@item.Name</option>
									}
								}
							</select>
						</div>

						<button type="submit" class="btn btn-primary custom-button">Submit</button>
					</form>



			<!------------------>

			<div class="table-responsive">
				<table class="table table-hover">
					<thead class="thead-dark">
						<tr>
						@*	<th scope="col"></th>*@
							<th scope="col">Describe</th>
							<th scope="col">Date Sign</th>
							<th scope="col">Date To</th>
							<th scope="col">Date Out</th>
							<th scope="col">Status</th>
							<th scope="col">Categories</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var document in Model.documents)
						{
								<tr>
								@*	<th scope="row">1</th>*@
									<td>@document.Describe</td>
								<td>@document.DateSign?.ToString("dd-mm-yyyy")</td>
								<td>@document.DateTo?.ToString("dd-mm-yyyy")</td>
								<td>@document.DateOut?.ToString("dd-mm-yyyy")</td>
									<td>@document.Status</td>
								<td>@document.Category.Name</td>
									<td>
										<a class="btn btn-info" asp-page="./Details" asp-route-id="@document?.Id"><i class="fas fa-eye"></i></a>
										<a class="btn btn-save " asp-page="./Edit" asp-route-id="@document?.Id"><i class="fas fa-pen"></i></a>
										<a class="btn btn-danger" asp-page="./Delete" asp-route-id="@document?.Id"><i class="fas fa-trash"></i></a>
									</td>
								</tr>
						}
					</tbody>
				</table>
			</div>

			<div class="row mb-5">
				<!--Paging-->
				<nav aria-label="Page navigation">
					<ul class="pagination">
						@for (var i = 1; i <= Model.TotalPages; i++)
						{
							<li class="page-item @(i == Model.CurrentPage ? "active" : "")">
								<a class="page-link" href="/document/list?pageIndex=@i">@i</a>
							</li>
						}
					</ul>
				</nav>
				<!------------------>
			</div>
		</div>


	</div>
</div>
</div>
</div>
@* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> *@
@section Scripts {
	<script>
		$(document).ready(function () {
			$('.export-button').click(function () {
				var headers = [];
				var data = [];
				$('table th').each(function () {
					var headerText = $(this).text().trim();
					if (headerText !== 'Action') {
						headers.push(headerText);
					}
				});
				$('table tbody tr').each(function () {
					var row = [];
					$(this).find('td:not(:last-child)').each(function () { // Loại Hàm Cuối
						var cellData = $(this).text().trim();
						// Kiểm tra xem cellData có phải là chuỗi ngày hợp lệ không
						if (!isNaN(Date.parse(cellData))) {
							// chỉnh format date the date as YYYY-MM-DD
							var date = new Date(cellData);
							cellData = date.toLocaleDateString('en-US'); // format to MM/DD/YYYY
						}
						row.push('"' + cellData.replace(/"/g, '""') + '"');
					});
					data.push(row.join(","));
				});

				var csvContent = "\uFEFF" + headers.join(",") + "\r\n" + data.join("\r\n");
				var blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
				var link = document.createElement("a");
				link.setAttribute("href", URL.createObjectURL(blob));
				link.setAttribute("download", "document_data.csv");
				document.body.appendChild(link);
				link.click();
			});
		});
	</script>
}
