@page "/Category/Index"
@model DocumentManager.Pages.Categories.IndexModel

<div class="container-fluid">
    <div class="row flex-nowrap">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Main Content -->
        <div class="col py-3">
            <!-- Button feature -->
            <div class="row mb-3">
                <div class="col">
                    <a class="btn btn-primary" asp-page="./Create">New Category</a>
                </div>
            </div>
            <!------------------>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>

    
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Category)
                        {
                        <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                                    <a class="btn btn-info" href="Details?id=@item.Id"><i class="fas fa-eye"></i></a>
                                    <a href="Edit?id=@item.Id" class="btn btn-primary btn-sm edit" title="Edit"><i class="fa fa-edit"></i></a>
                                    <a href="Delete?id=@item.Id" class="btn btn-primary btn-sm edit" title="Delete"><i class="fa fa-trash"></i></a>


                        </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


